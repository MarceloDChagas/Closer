generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id        String     @id @default(uuid())
  firstName String
  lastName  String
  email     String     @unique
  phone     String
  street    String
  city      String
  state     String
  zipCode   String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  sessions  Session[]
  payments  Payment[]
}

model Session {
  id        String   @id @default(uuid())
  date      DateTime
  duration  Int
  status    String
  clientId  String
  client    Client   @relation(fields: [clientId], references: [id])
  payment   Payment?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clientId])
}

model Payment {
  id        String   @id @default(uuid())
  amount    Float
  currency  String
  status    String
  method    String
  clientId  String
  client    Client   @relation(fields: [clientId], references: [id])
  sessionId String?  @unique
  session   Session? @relation(fields: [sessionId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clientId])
  @@index([sessionId])
}
